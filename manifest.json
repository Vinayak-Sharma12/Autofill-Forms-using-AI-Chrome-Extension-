{
  "manifest_version": 3,
  "name": "Job Application Auto-Fill AI Agent",
  "version": "1.0.0",
  "description": "Auto-fill job application forms using your profile and AI-generated answers from your resume.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Fill job application form"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["field-mapping.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
